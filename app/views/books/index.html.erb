<h1>Books</h1>

<p>Title  Body</P>
<% @books.each do |book| %>
  <p>
  <span class="book-title"><%= book.title %></span>
  <span class="book-body"><%= book.body %></span>
  <%= link_to "Show", book_path(book.id) %>
  <%= link_to "Edit", edit_book_path(book.id) %>
  <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "deta-confirm" => "本当に削除しますか？" %>
  </p>
  
<% end %>

<h1>New Book</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Crate Book' %>
<% end %>

<p>Find me in app/views/books/index.html.erb</p>
